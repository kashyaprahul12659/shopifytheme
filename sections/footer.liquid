<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__column">
        <div class="footer__branding">
          {% if section.settings.logo != blank %}
            {{ section.settings.logo | image_url: width: 150 | image_tag: 
              class: "footer__logo",
              alt: shop.name,
              loading: "lazy"
            }}
          {% else %}
            <div class="footer__logo-text">{{ shop.name }}</div>
          {% endif %}
          
          {% if section.settings.tagline != blank %}
            <div class="footer__tagline">{{ section.settings.tagline }}</div>
          {% endif %}
        </div>
      </div>
      
      <div class="footer__column">
        <h3 class="footer__nav-title">{{ section.settings.menu_title }}</h3>
        {% if section.settings.menu.links.size > 0 %}
          <ul class="footer__nav-list">
            {% for link in section.settings.menu.links %}
              <li class="footer__nav-item">
                <a href="{{ link.url }}" class="footer__nav-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      
      <div class="footer__column">
        <h3 class="footer__nav-title">{{ section.settings.newsletter_title }}</h3>
        
        {% if section.settings.newsletter_text != blank %}
          <div class="footer__newsletter-text">{{ section.settings.newsletter_text }}</div>
        {% endif %}
        
        {% form 'customer', class: 'footer__newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input
            type="email"
            name="contact[email]"
            id="EmailFooter"
            class="footer__newsletter-input"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
            required
          >
          <button type="submit" class="footer__newsletter-btn" name="commit">
            {{ 'general.newsletter_form.submit' | t }}
          </button>
        {% endform %}
        
        {% if section.settings.show_social %}
          <div class="footer__social">
            {% if settings.social_instagram_link != blank %}
              <a href="{{ settings.social_instagram_link }}" class="footer__social-link" aria-label="{{ 'links.instagram' | t }}">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M17 2H7C4.23858 2 2 4.23858 2 7V17C2 19.7614 4.23858 22 7 22H17C19.7614 22 22 19.7614 22 17V7C22 4.23858 19.7614 2 17 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M16 11.37C16.1234 12.2022 15.9813 13.0522 15.5938 13.799C15.2063 14.5458 14.5931 15.1514 13.8416 15.5297C13.0901 15.9079 12.2384 16.0396 11.4078 15.9059C10.5771 15.7723 9.80976 15.3801 9.21484 14.7852C8.61991 14.1902 8.22773 13.4229 8.09406 12.5922C7.9604 11.7615 8.09206 10.9099 8.47032 10.1584C8.84858 9.40685 9.45418 8.79374 10.201 8.40624C10.9478 8.01874 11.7978 7.87658 12.63 8C13.4789 8.12588 14.2648 8.52146 14.8717 9.1283C15.4785 9.73515 15.8741 10.5211 16 11.37Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M17.5 6.5H17.51" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="footer__social-link" aria-label="{{ 'links.facebook' | t }}">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 2H15C13.6739 2 12.4021 2.52678 11.4645 3.46447C10.5268 4.40215 10 5.67392 10 7V10H7V14H10V22H14V14H17L18 10H14V7C14 6.73478 14.1054 6.48043 14.2929 6.29289C14.4804 6.10536 14.7348 6 15 6H18V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_twitter_link != blank %}
              <a href="{{ settings.social_twitter_link }}" class="footer__social-link" aria-label="{{ 'links.twitter' | t }}">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M23 3C22.0424 3.67548 20.9821 4.19211 19.86 4.53C19.2577 3.83751 18.4573 3.34669 17.567 3.12393C16.6767 2.90116 15.7395 2.9572 14.8821 3.28445C14.0247 3.6117 13.2884 4.1944 12.773 4.95372C12.2575 5.71303 11.9877 6.61234 12 7.53V8.53C10.2426 8.57557 8.50127 8.18581 6.93101 7.39545C5.36074 6.60508 4.01032 5.43864 3 4C3 4 -1 13 8 17C5.94053 18.398 3.48716 19.0989 1 19C10 24 21 19 21 7.5C20.9991 7.22145 20.9723 6.94359 20.92 6.67C21.9406 5.66349 22.6608 4.39271 23 3V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_pinterest_link != blank %}
              <a href="{{ settings.social_pinterest_link }}" class="footer__social-link" aria-label="{{ 'links.pinterest' | t }}">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M9.5 9C10.4572 8.08621 11.6803 7.59993 12.9531 7.65426C14.2258 7.70859 15.4081 8.29941 16.2801 9.29556C17.1521 10.2917 17.6363 11.6075 17.6346 12.9792C17.6329 14.351 17.1454 15.6654 16.2708 16.6592C15.3962 17.653 14.2121 18.2407 12.9392 18.2917C11.6663 18.3426 10.444 17.8532 9.48872 16.9371M9.5 9V14M9.5 9H13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_youtube_link != blank %}
              <a href="{{ settings.social_youtube_link }}" class="footer__social-link" aria-label="{{ 'links.youtube' | t }}">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M22.54 6.42C22.4212 5.94541 22.1793 5.51057 21.8387 5.15941C21.4981 4.80824 21.0708 4.55318 20.6 4.42C18.88 4 12 4 12 4C12 4 5.12 4 3.4 4.46C2.92925 4.59318 2.50194 4.84824 2.16131 5.19941C1.82068 5.55057 1.57875 5.98541 1.46 6.46C1.14521 8.20556 0.991235 9.97631 0.999999 11.75C0.988747 13.537 1.14273 15.3213 1.46 17.08C1.59096 17.5398 1.83831 17.9581 2.17814 18.2945C2.51798 18.6308 2.93882 18.8738 3.4 19C5.12 19.46 12 19.46 12 19.46C12 19.46 18.88 19.46 20.6 19C21.0708 18.8668 21.4981 18.6118 21.8387 18.2606C22.1794 17.9094 22.4212 17.4746 22.54 17C22.8524 15.2676 23.0063 13.5103 23 11.75C23.0112 9.96295 22.8573 8.1787 22.54 6.42V6.42Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M9.75 15.02L15.5 11.75L9.75 8.48001V15.02Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_tiktok_link != blank %}
              <a href="{{ settings.social_tiktok_link }}" class="footer__social-link" aria-label="{{ 'links.tiktok' | t }}">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M10 15C8.34315 15 7 16.3431 7 18C7 19.6569 8.34315 21 10 21C11.6569 21 13 19.6569 13 18V11M13 11H17M13 11V4.00001C13 4.00001 16 5.50001 20 5.50001V11.5C20 11.5 18.5 10.5 17 10.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
    
    <div class="footer__bottom">
      <p>{{ section.settings.copyright_text | replace: '[year]', 'now' | date: '%Y' }}</p>
      
      {% if section.settings.show_payment_icons %}
        <div class="footer__payment">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'icon icon--payment' }}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "High-quality silver jewelry handcrafted with precision and care."
    },
    {
      "type": "text",
      "id": "menu_title",
      "label": "Menu title",
      "default": "Quick links"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Subscribe to our emails"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Be the first to know about new collections and exclusive offers."
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social media links",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment methods",
      "default": true
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "© [year] ShreeRamPremium. All rights reserved."
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}

<style>
  .footer {
    background-color: #f9f9f9;
    color: var(--color-text);
    padding: var(--spacing-extra-large) 0 var(--spacing-medium);
  }
  
  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-large);
    margin-bottom: var(--spacing-large);
  }
  
  @media (min-width: 768px) {
    .footer__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .footer__logo-text {
    font-family: var(--font-heading);
    font-size: 2.4rem;
    font-weight: 600;
    margin-bottom: var(--spacing-medium);
  }
  
  .footer__bottom {
    border-top: 1px solid var(--color-border);
    padding-top: var(--spacing-medium);
    text-align: center;
    font-size: 1.2rem;
  }
  
  .footer__payment {
    display: flex;
    justify-content: center;
    gap: var(--spacing-small);
    margin-top: var(--spacing-small);
  }
</style>
