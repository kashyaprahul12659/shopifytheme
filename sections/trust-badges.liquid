<div class="trust-badges">
  <div class="container">
    {% if section.settings.title != blank %}
      <div class="trust-badges__header">
        <h2 class="trust-badges__title">{{ section.settings.title }}</h2>
      </div>
    {% endif %}
    
    <div class="trust-badges__grid">
      {% for block in section.blocks %}
        <div class="trust-badge" {{ block.shopify_attributes }}>
          <div class="trust-badge__icon">
            {% case block.settings.icon %}
              {% when 'shield' %}
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 22C12 22 20 18 20 12V5L12 2L4 5V12C4 18 12 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% when 'truck' %}
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M16 16V3H1V16H16ZM16 16H23V10L20 7H16V16ZM7 20H11M3 20H7M11 20H15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M5 20C5 21.1046 4.10457 22 3 22C1.89543 22 1 21.1046 1 20C1 18.8954 1.89543 18 3 18C4.10457 18 5 18.8954 5 20Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M13 20C13 21.1046 12.1046 22 11 22C9.89543 22 9 21.1046 9 20C9 18.8954 9.89543 18 11 18C12.1046 18 13 18.8954 13 20Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% when 'returns' %}
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M17 2L21 6L17 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M3 11V9C3 7.93913 3.42143 6.92172 4.17157 6.17157C4.92172 5.42143 5.93913 5 7 5H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M7 22L3 18L7 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M21 13V15C21 16.0609 20.5786 17.0783 19.8284 17.8284C19.0783 18.5786 18.0609 19 17 19H3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% when 'payment' %}
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect x="2" y="5" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M2 10H22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% when 'certificate' %}
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M16 16L22 22M12 17C8.13401 17 5 13.866 5 10C5 6.13401 8.13401 3 12 3C15.866 3 19 6.13401 19 10C19 13.866 15.866 17 12 17ZM12 17V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% when 'customer-service' %}
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M22 16.92V19.92C22 20.4704 21.7893 20.9978 21.4142 21.3728C21.0391 21.7479 20.5117 21.9586 19.96 21.96C16.4223 22.2818 12.9585 21.4731 9.9939 19.6476C7.2575 17.9898 5.04532 15.778 3.38755 13.042C1.56029 10.0683 0.750639 6.59078 1.07998 3.04C1.08134 2.48831 1.29224 1.96119 1.66726 1.58646C2.04228 1.21174 2.56917 1.00127 3.11998 1H6.11998C7.11383 0.990295 7.99106 1.72157 8.11998 2.7C8.23653 3.68158 8.47485 4.64408 8.82998 5.56C9.14547 6.34851 8.99324 7.2479 8.43998 7.94L7.09998 9.28C8.63493 12.1378 10.8621 14.3651 13.72 15.9L15.06 14.56C15.7521 14.0067 16.6515 13.8545 17.44 14.17C18.3559 14.5252 19.3184 14.7635 20.3 14.88C21.2903 15.0103 22.0279 15.8944 22 16.92Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% else %}
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 16V12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 8H12.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            {% endcase %}
          </div>
          
          <h3 class="trust-badge__title">{{ block.settings.title }}</h3>
          
          {% if block.settings.text != blank %}
            <div class="trust-badge__text">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trust Badges",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Shop with Confidence",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "Badge",
      "type": "badge",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "options": [
            {
              "value": "shield",
              "label": "Shield"
            },
            {
              "value": "truck",
              "label": "Truck"
            },
            {
              "value": "returns",
              "label": "Returns"
            },
            {
              "value": "payment",
              "label": "Payment"
            },
            {
              "value": "certificate",
              "label": "Certificate"
            },
            {
              "value": "customer-service",
              "label": "Customer Service"
            }
          ],
          "default": "shield",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "default": "100% Authentic Silver",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "default": "All our products are made with genuine 925 sterling silver",
          "label": "Text"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Trust Badges",
      "blocks": [
        {
          "type": "badge",
          "settings": {
            "icon": "shield",
            "title": "100% Authentic Silver"
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "truck",
            "title": "Free Shipping"
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "returns",
            "title": "30-Day Returns"
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "payment",
            "title": "Secure Payments"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .trust-badges {
    padding: var(--spacing-large) 0;
    background-color: #f5f5f5;
  }
  
  .trust-badges__header {
    text-align: center;
    margin-bottom: var(--spacing-large);
  }
</style>
